<!doctype html>
<html lang="en">
<head id="muse" data-template-set="html5-reset">
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>[Muse] {% block title %}{% endblock %}</title>

    <meta name="title" content="[Muse] {{ block('title') }}" />
    <meta name="description" content="Gallery" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="{{ asset('img/favicon.ico') }}" />


    <link rel="stylesheet" href="{{ asset('css/reset.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
    <link rel="stylesheet" href="{{ asset('css/fresco.css') }}" />
    {% block stylesheets %}{% endblock %}
</head>

<body{# id="{{ _controller ~ _action }}" class="{{ _controller ~ ' ' ~ _action }}"#}>
    <header>
        <div id="menu">
            <a href="{{ url('mattlab_muse_homepage') }}">
                {% trans %}menu.home{% endtrans %}
            </a>
            {#
            {% if _session.has('user') %}
                <a>
                    {{ _session.get('user').getName() }}
                </a>

                <a href="{{ url('UserSignOut') }}">
                    {% trans %}menu.signout{% endtrans %}
                </a>
            {% else %}
                <a href="{{ url('UserSignIn') }}">
                    {% trans %}menu.signin{% endtrans %}
                </a>
            {% endif %}
            #}
        </div>
        <div id="pageTitle">
            {% block pageTitle %}
                {{ block('title') }}
            {% endblock %}
        </div>
    </header>

    <div id="content">
        {% block content %}
        {% endblock %}
    </div>

    <footer>
        <p>
            <small>
                {% trans with {'%name%': '<a href="https://github.com/marmotz/muse">Muse</a>'} %}
                    footer.powered
                {% endtrans %}
            </small>
        </p>
    </footer>

    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/fresco.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>